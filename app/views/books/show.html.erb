<body>

  <main>
       <h2>Book detail</h2>
    <table class ="table">
      <tbody>
        <tr>

          <td><%=link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100,100) %><br><%= @user.name %>
          <% end %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id), method: :edit %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>

        </tr>
      </tbody>
    </table>
  </main>

  <div>
    <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book.id), method: :delete %>
    <% end %>
  </div>

</body>